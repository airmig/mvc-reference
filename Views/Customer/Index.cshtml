@{

}
<h1>Customer View</h1>
<p>@ViewBag.Message</p>

<p>There are @ViewBag.CustomerCount customers</p>
<a asp-action="Create">Create</a>
<ul>
    @foreach(var customer in @ViewBag.CustomerList){
        <li>@customer.Id - @customer.Name - @customer.Amount
            <a asp-action="Edit" asp-route-id="@customer.Id">Edit</a>
            &nbsp;
            <a asp-action="Detail" asp-route-id="@customer.Id">Details</a>
            &nbsp;
            <a asp-action="Delete" asp-route-id="@customer.Id">Delete</a>
            &nbsp;
        </li>
    }
</ul>

<hr/>
@Html.ActionLink("Home Page","Message","Home")

<h3>Tag Helper</h3>
<!-- 
